<h1>Edit a recipe</h1>
<form action="/recipes/<%=@recipe.id%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <p><input type="text" id ="recipe_name" name="name" value="<%=@recipe.name%>"></p>
    <p><input type="text" id ="ingredients" name="ingredients" value="<%=@recipe.ingredients%>"></p>
    <p><input type="text" id ="cook_time" name="cook_time" value="<%=@recipe.cook_time%>"></p>
    <input type="submit" value="edit">
</form>
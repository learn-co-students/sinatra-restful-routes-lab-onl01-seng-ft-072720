<h1>Edit Your Receipe:</h1>
<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label for="name">Name:</label>
    <input id="name" type="text" name="name" placeholder="<%= @recipe.name %>">
    <label for="ingredients">Ingredients:</label>
    <input id="ingredients" type="text" name="ingredients" placeholder="<%= @recipe.ingredients %>">
    <label for="cook_time">Cook Time:</label>
    <input id="cook_time" type="text" name="cook_time" placeholder="<%= @recipe.cook_time %>">
    <input type="submit" value="Submit Update">
</form>

<form method="POST" action="/recipes/<%=@recipe.id%>">
<input id="hidden" type="hidden" name="_method" value="patch">
<h2>Recipe Name: <input type="text" name="name" value=<%=@recipe.name%></h2>
<p>Recipe Ingredients: <input type="text" name="ingredients" value=<%=@recipe.ingredients%></p>
<p>Recipe Cook Time: <input type="text" name="cook_time"  value=<%=@recipe.cook_time.to_i%> minutes</p>
<input type="submit" value="submit">
</form>